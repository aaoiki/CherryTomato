# A sample Gemfile
source "https://rubygems.org"

gem 'sinatra'
gem 'sinatra-contrib'

gem 'json'

gem "sprockets"
gem 'coffee-script'
gem "uglifier"
gem 'sass'

gem 'foreman'

gem 'omniauth-twitter'
gem "sinatra-cross_origin", "~> 0.3.1"
gem 'jwt'

gem 'pg'
gem 'rom-repository'
gem 'rom-sql'

gem 'geckorate', git: 'https://github.com/aonemd/geckorate'

group :development do
  gem 'shotgun'
end

group :development, :test do
  gem 'rake'
  gem 'byebug'
  gem 'pry'
end

group :test do
  gem 'minitest'
  gem 'rack-test'
end
