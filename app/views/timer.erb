<div class="row">
  <div class="small-10 medium-10 large-10 small-centered medium-centered large-centered columns text-center" role="content">
    <div id="timer-box">
      <div>
        <span id="minutes" contenteditable="true">25</span>
        :
        <span id="seconds" contenteditable="true">00</span>
      </div>
    </div>

    <div class="start-switch-control">
      <div class="switch large">
        <input class="switch-input" id="start-stop-switch" type="checkbox">
          <label class="switch-paddle" for="start-stop-switch">
            <span class="switch-active" aria-hidden="true">Start</span>
            <span class="switch-inactive" aria-hidden="true">Stop</span>
          </label>
      </div>
    </div>
  </div>
</div>
